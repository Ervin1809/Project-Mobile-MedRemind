<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background (opsional, hapus jika ingin transparan) -->
    <solid android:color="@color/white_checked" />

    <!-- Pengaturan border/stroke -->
    <stroke
        android:width="3dp"
        android:color="@color/green" /> <!-- Warna border hitam -->

    <!-- Radius sudut (opsional, untuk sudut melengkung) -->
    <corners android:radius="12dp" />

</shape>